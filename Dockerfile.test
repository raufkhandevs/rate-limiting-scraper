FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies for testing)
RUN npm install

# Copy source code and config files
COPY src/ ./src/
COPY tests/ ./tests/
COPY tsconfig.json ./
COPY tsconfig.test.json ./
COPY jest.config.js ./

# Expose port (not needed for tests, but good practice)
EXPOSE 3000

# Default command is to run tests
CMD ["npm", "test"]
